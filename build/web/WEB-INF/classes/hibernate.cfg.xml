<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/project</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="connection.pool_size">1</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class="com.sathish.obj.Product"/>
        <mapping class="com.sathish.obj.Category"/>
        <mapping class="com.sathish.obj.ProductImage"/>
        <mapping class="com.sathish.obj.ProductReview"/>
        <mapping class="com.sathish.obj.Order"/>
        <mapping class="com.sathish.obj.OrderDetail"/>
        <mapping class="com.sathish.obj.User"/>
        <mapping class="com.sathish.obj.UserRole"/>
    </session-factory>
</hibernate-configuration>
